                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/unselectedtabtext"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
