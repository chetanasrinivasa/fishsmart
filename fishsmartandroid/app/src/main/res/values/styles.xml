<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/customemenu</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabViewStyle</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabViewStyle</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTextStyle</item>
        <item name="actionBarTabBarStyle">@style/customTabBar</item>
        <item name="actionBarTabBarStyle">@style/customTabBar</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="homeAsUpIndicator">@drawable/searchbackindicator</item>
    </style>

    <style name="MyAppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- you should set typeface which you want to override with TypefaceUtil -->
    </style>

    <style name="MyActionBarTabViewStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="background">@drawable/action_bar_tab</item>
    </style>

    <style name="MyActionBarTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:textColor">@color/tabtextchanger</item>
        <item name="android:paddingLeft">1dip</item>
        <item name="android:paddingRight">1dip</item>
        <item name="background">@null</item>
    </style>

    <style name="customTabBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="showDividers">none</item>
        <item name="android:paddingRight">16dp</item>
        <item name="showDividers">none</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:drawableEnd">@drawable/search_icon_white</item>
        <item name="background">@color/morpinch</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- no title bar -->
    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- no title bar & full screen -->
    <style name="AppTheme.NoTitleBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--  -->
    <style name="DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/morpinch</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>